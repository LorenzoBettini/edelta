<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="edelta.dependency.analyzer.ui.commands.category"
            name="Edelta">
      </category>
      <command
            categoryId="edelta.dependency.analyzer.ui.commands.category"
            id="edelta.dependency.analyzer.ui.commands.analyzeCommand"
            name="Analyze Ecore Files">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edelta.dependency.analyzer.ui.handlers.EdeltaRunDependencyAnalysisHandler"
            commandId="edelta.dependency.analyzer.ui.commands.analyzeCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edelta.dependency.analyzer.ui.commands.analyzeCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               id="edelta.dependency.analyzer.ui.menus.edeltaMenu"
               label="Edelta"
               mnemonic="E">
            <command
                  commandId="edelta.dependency.analyzer.ui.commands.analyzeCommand"
                  id="edelta.dependency.analyzer.ui.menus.analyzeCommand"
                  mnemonic="S">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <reference
                        definitionId="edelta.dependency.analyzer.ui.ecoreFile">
                  </reference>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="edelta.dependency.analyzer.ui.ecoreFile">
         <iterate
               ifEmpty="false">
            <adapt
                  type="org.eclipse.core.resources.IFile">
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.ecore">
               </test>
            </adapt>
         </iterate>
      </definition>
   </extension>

</plugin>
